<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".farmer.Farmerhome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="center">




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/argi2"/>



        <Button
            android:id="@+id/btnaddcrops"
            style="@style/Button"
            android:text="Add Crop details"
            android:textSize="18sp"
            android:backgroundTint="#7CB342" />


        <Button
            android:id="@+id/btnfviewcrops"
            style="@style/Button"
            android:text="View Crop Details"
            android:textSize="18sp"
            android:backgroundTint="#43A047" />


        <Button
            android:id="@+id/btnfrequest"
            style="@style/Button"
            android:text="Tourism request"
            android:textSize="18sp"
            android:backgroundTint="#7CB342" />

    </LinearLayout>

</FrameLayout>